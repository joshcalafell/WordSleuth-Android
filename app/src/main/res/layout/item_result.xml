<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:id="@+id/item_result_type"
                android:background="@android:color/transparent"
                android:elevation="5dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_ic_success"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_success"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:tint="#41f441"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Result"
        android:id="@+id/tv_result"
        android:layout_alignBottom="@+id/iv_ic_success"
        android:layout_toRightOf="@+id/iv_ic_success"
        android:layout_toEndOf="@+id/iv_ic_success"
        android:layout_alignTop="@+id/ib_add"
        android:textColor="@android:color/white"
        android:paddingLeft="10dp"
        android:paddingTop="0dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tv_numLetters"
        android:paddingLeft="10dp"
        android:textColor="@android:color/holo_blue_light"
        android:paddingTop="6.66dp"
        android:paddingRight="10dp"
        android:layout_below="@+id/iv_ic_success"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ib_add"
        android:layout_alignBottom="@+id/iv_ic_success"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@mipmap/ic_action_expand"
        android:paddingRight="10dp"/>

</RelativeLayout>