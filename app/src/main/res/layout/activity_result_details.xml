<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/wordsleuth_bg_512x512"
                android:id="@+id/fragment_result_detail">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/page_number"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@android:color/holo_blue_light"
        android:padding="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Result Details"
        android:id="@+id/tv_title"
        android:layout_below="@+id/page_number"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/page_number"
        android:layout_alignEnd="@+id/page_number"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="@android:color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tv_instructions"
        android:layout_below="@+id/tv_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/page_number"
        android:layout_alignEnd="@+id/page_number"
        android:paddingLeft="30dp"
        android:paddingTop="10dp"
        android:paddingRight="30dp"
        android:textColor="@android:color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Result: "
        android:id="@+id/tv_result_title"
        android:layout_alignTop="@+id/tv_instructions"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="30dp"
        android:paddingTop="15dp"
        android:textColor="@android:color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Length:"
        android:id="@+id/tv_length_title"
        android:paddingTop="15dp"
        android:paddingLeft="30dp"
        android:textColor="@android:color/white"
        android:layout_below="@+id/tv_result_title"
        android:layout_toLeftOf="@+id/tv_result"
        android:layout_toStartOf="@+id/tv_result"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="word"
        android:id="@+id/tv_result"
        android:layout_alignBottom="@+id/tv_result_title"
        android:layout_toRightOf="@+id/tv_result_title"
        android:layout_toEndOf="@+id/tv_result_title"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:textColor="@android:color/holo_blue_light"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0 letters"
        android:id="@+id/tv_length"
        android:textColor="@android:color/holo_blue_light"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:layout_above="@+id/tv_scrabble_title"
        android:layout_toRightOf="@+id/tv_length_title"
        android:layout_toEndOf="@+id/tv_length_title"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Scrabble(TM) Points: "
        android:id="@+id/tv_scrabble_title"
        android:layout_below="@+id/tv_length_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="15dp"
        android:paddingLeft="30dp"
        android:textColor="@android:color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0"
        android:id="@+id/tv_scrabble_points"
        android:layout_alignBottom="@+id/tv_scrabble_title"
        android:layout_toRightOf="@+id/tv_scrabble_title"
        android:layout_toEndOf="@+id/tv_scrabble_title"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:textColor="@android:color/holo_blue_light"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Words(TM) Points:"
        android:id="@+id/tv_words_title"
        android:layout_below="@+id/tv_scrabble_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/white"
        android:paddingLeft="30dp"
        android:paddingTop="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0"
        android:id="@+id/tv_words_points"
        android:layout_alignBottom="@+id/tv_words_title"
        android:layout_toRightOf="@+id/tv_words_title"
        android:layout_toEndOf="@+id/tv_words_title"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:textColor="@android:color/holo_blue_light"/>

</RelativeLayout>