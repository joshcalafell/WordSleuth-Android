<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rabbitfighter.wordsleuth" >

    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:configChanges="orientation|keyboardHidden"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Splash.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.InstructionActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".Activities.SearchActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".Activities.ResultsListActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".Activities.ResultDetailActivity"
            android:label="@string/app_name" >
        </activity>

        <service
            android:name=".Services.BoundSearchService"
            android:enabled="true"
            android:exported="true" >
        </service>
    </application>

</manifest>
